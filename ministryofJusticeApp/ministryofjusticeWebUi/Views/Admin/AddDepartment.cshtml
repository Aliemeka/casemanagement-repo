@model ministryofjusticeWebUi.Models.DepartmentViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "AddDepartment";
}

<div class="card mb-4 col-md-8">
<div class="card-header">Create Account</div>
<div class="card-body">
@using (Html.BeginForm("AddDepartment", "Admin", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger small" })
    <!--Email-->
    <div class="form-group">
        @Html.LabelFor(m => m.DepartmentName,
            new { @class = "col-md-6 control-label" })
        <div>
            @Html.TextBoxFor(m => m.DepartmentName,
                new
                {
                    @class = "form-control form-control-user",
                    @id = "exampleInputEmail",
                    @placeholder = "Enter first name"
                })
            @Html.ValidationMessageFor(m => m.DepartmentName, "", new { @class = "text-danger small" })
        </div>
    </div>
    @Html.HiddenFor(m => m.Id);
    <button type="submit" class="btn btn-primary btn-user btn-block">
        Create Account
    </button>
}
</div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
